---
import type { CollectionEntry } from 'astro:content';
import { format, formatISO,  } from 'date-fns';

export type Props = {
  post: CollectionEntry<'posts'>;
};

const { post } = Astro.props;
---
<div class="flex-row flex  justify-between flex-nowrap">
  <h3 class="font-thai text-lg mb-8 sm:mb-5 pr-8 leading-snug font-normal dark:text-white">
    <a href={`/posts/${post.slug}`} class="dark:hover:text-blue-300 hover:text-blue-800">
      {post.data.title}
    </a>
  </h3>
  <div class="text-sm mb-4 min-w-fit text-gray-500 dark:text-gray-400 font-bold">
    <!-- <DateFormatter dateString={date} format="MM-dd" /> -->
    <time datetime={formatISO(post.data.publishedAt)}>{format(post.data.publishedAt, 'MM-dd')}</time>
  </div>
</div>